@font-face
	font-family	StudioScript
	src	url('library/StudioScript.ttf')
@font-face
	font-family	DSJapanCyr
	src	url('library/DSJapanCyr.ttf')
centering()
	text-align	center
	&:before
		content	''
		display	inline-block
		height	100% 
		vertical-align	middle
		margin-right	-0.25em
@keyframes pulse
	0%, 49%
		opacity	0
	50%, 99%
		opacity	1
@keyframes bump
	0%, 19%
		top	0.02em
		
	20%, 99%
		top	0